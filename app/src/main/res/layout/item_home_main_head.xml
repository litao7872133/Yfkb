<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="68dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_marginTop="54dp"
            android:background="@color/white" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="124dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/viewpager"
            android:background="@color/white"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_membership_card"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="我的会员卡"
            android:textColor="@color/text_black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="查看详情 >"
            android:textColor="@color/text_hint"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_circle_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="渔夫卡卡超级会员已到店"
                android:textColor="@color/text_black"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="苏大强发型沙龙（太古里店）"
                    android:textColor="@color/text_hint"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/text_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_place"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="200m"
                    android:textColor="@color/text_hint"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_recommend"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_recommend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="品质好店"
            android:textColor="@color/text_black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/text_recommend"
            android:gravity="center"
            android:text="精选商家推荐"
            android:textColor="@color/text_hint"
            android:textSize="13dp" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scrollview"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="96dp"
                    android:background="@drawable/ic_rec_default" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_rec_default" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_rec_default" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_rec_default" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_rec_default" />
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <View
            android:id="@+id/view_mark"
            android:layout_width="30dp"
            android:layout_height="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/ic_home_mian_mark" />

        <TextView
            android:id="@+id/text_comprehensive"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:text="综合"
            android:textColor="@color/text_black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_nearby"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="58dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="附近"
            android:textColor="@color/text_black"
            android:textSize="13dp" />

    </RelativeLayout>

</LinearLayout>