<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardElevation="0px"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#22222222" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:text="上海普陀区，真北路1817弄（长征家苑）34号"
            android:textColor="@color/text_black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@mipmap/ic_place"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="长征家苑0.1km"
            android:textColor="@color/text_hint"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text_recharge01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bt_home_mani_recharge"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:text="充100送100"
            android:textColor="@color/text_red"
            android:textSize="10dp" />


    </LinearLayout>

</android.support.v7.widget.CardView>